{
  "manifest_version": 2,
  "name": "Mapify Kijiji",
  "version": "0.2",

  "description": "Creates a map from Kijiji listings. Must be on a Kijiji Listing page for the Mapify Kijiji icon to work.",
  "icons" : { 
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png" 
  },

  "omnibox": { "keyword" : "mk" },

  "background": {
    "scripts": [
      "js/background.js"
    ]
  },

  "permissions": ["http://*.kijiji.ca/", "geolocation", "tabs", "notifications"],

  "page_action": {
    "default_title": "Mapify Kijiji",

    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    }
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "all_frames": true,
      "matches": ["http://*.kijiji.ca/*"],
      "js": [
        "js/jquery-2.0.3.min.js",
        "js/jquery.easyModal.js",
        "js/spin.min.js",
        "js/leaflet.js",
        "js/cs.js"
      ],
      "css" : [
        "css/leaflet.css"
      ]
    }
  ],
  "web_accessible_resources": [
      "js/jquery-2.0.3.min.map",
      "js/gmaps.js",
      "images/marker-icon.png",
      "images/marker-shadow.png",
      "images/layers.png"
  ]
}