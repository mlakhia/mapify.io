{
  "manifest_version": 2,
  "name": "Mapify Kijiji",
  "version": "0.2",

  "description": "Creates an overlay map using data points from Kijiji listings. Must be on a Kijiji Listing page for the Mapify Kijiji icon to appear.",
  "icons" : { 
    "128": "images/icon128.png" 
  },

  "background": {
    "scripts": [
      "js/app.js"
    ]
  },

  "permissions": ["geolocation", "tabs", "notifications", "http://*.kijiji.ca/*"],
  "plugins": [{
    "path": ""
  }],

  "browser_action": {
    "default_title": "Mapify Kijiji",
    
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": [
        "js/jquery-2.0.3.min.js",
        "js/jquery.easyModal.js",
        "js/spin.min.js",
        "js/leaflet.js",
        "js/cs.js"
      ],
      "css" : [
        "css/leaflet.css"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
      "js/gmaps.js",
      "images/marker-icon.png",
      "images/marker-shadow.png",
      "images/layers.png"
  ]
}